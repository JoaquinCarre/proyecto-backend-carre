<div class="bg-light p-3 border border-dark">
    <div id="log">
        <div id="login-div" class="bg-secondary p-3">
            <h2>Inicio de Sesi√≥n</h2>
            <form id="formLogin">
                <label for="login" class="form-label">Nombre de Usuario:</label>
                <input type="text" name="login" class="form-control" id="loginUser" width="200" required>
                <div class="mt-2">
                    <button type="submit" class="btn btn-success">Login</button>
                </div>
            </form>
        </div>
        <div id="logout-div" class="d-none">
            <div class="row bg-warning p-5">
                <div class="text-center">
                    <output id="userOutput" class="fs-2 p-2"></output>
                </div>
                <div class="m-auto">
                    <button id="logoutBtn" type="button" class="me-2 btn btn-danger">Logout</button>
                </div>
            </div>
        </div>
    </div>
    <div id="formAdd" class="d-none">
        <h2>Agregar un producto</h2>
        <form id="form_upload_product" action="/" method="post">
            <label for="name_product">Nombre Producto</label>
            <input type="text" name="title" id="name_product">
            <br />
            <br />
            <label for="price_product">Precio Producto</label>
            <input type="text" name="price" id="price_product">
            <br />
            <br />
            <label for="url_product">URL Imagen Producto</label>
            <input type="text" name="thumbnail" id="url_product">
            <br />
            <br />
            <button type="submit" class="btn btn-success">Agregar</button>
        </form>
    </div>
    <div>
        <h2>Productos</h2>
        <table class="table" id="tableProducts">
            <tr>
                <th>Nombre</th>
                <th>Precio [US$]</th>
                <th>Imagen</th>
            </tr>
            {{#if isEmpty}}
            <tr>
                <td>No hay productos subidos</td>
            </tr>
            {{/if}}
        </table>
    </div>
</div>
